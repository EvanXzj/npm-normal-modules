{
  "extends": ["prettier"],
  "env": {
    "node": true,
    "es6": true
  },
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "printWidth": 100,
        "singleQuote": true,
        "trailingComma": "es5"
      }
    ],
    "no-var": ["error"],
    "space-before-function-paren": "error",
    "space-in-parens": "error",
    "spaced-comment": "error",
    "space-before-blocks": "error",
    "arrow-body-style": "error"
  },
  "parser": "babel-eslint"
}
